<div class = "new_booking_form">
    <%= simple_form_for [@boat,@booking], data: { controller: 'flatpickr' } do |f| %>
      <%= f.input :checkin, as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
      <%= f.input :checkout, as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
      <%= f.input :number, as: :integer, placeholder: "Number of buests" %>
      <%= f.submit 'Schedule your appointment' %>
    <% end %>
</div>
